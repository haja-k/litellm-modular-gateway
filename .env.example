# Database Configuration
POSTGRES_DB=litellm
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://your_user:your_password@db:5432/litellm

# LiteLLM Module API Keys
# Generate secure keys for production: openssl rand -hex 32
LITELLM_LLM_MASTER_KEY=sk-your-llm-key-here
LITELLM_VISION_MASTER_KEY=sk-your-vision-key-here
LITELLM_AUDIO_MASTER_KEY=sk-your-audio-key-here
LITELLM_IMAGE_GEN_MASTER_KEY=sk-your-image-gen-key-here
LITELLM_EMBEDDINGS_MASTER_KEY=sk-your-embeddings-key-here

# Backend Service URLs
# Update these to point to your actual inference servers
OLLAMA_BASE_URL=http://host.minikube.internal:11434
WHISPER_BASE_URL=http://host.minikube.internal:8000/v1
IMAGE_GEN_BASE_URL=http://host.minikube.internal:7860/v1

# LiteLLM Settings
LITELLM_LOG=INFO
STORE_MODEL_IN_DB=True
